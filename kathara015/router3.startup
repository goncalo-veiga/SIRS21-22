ifconfig eth0 5.4.3.254/24 up
ifconfig eth1 6.6.6.2/24 up
ip route add 0.0.0.0/0 via 6.6.6.1
cp -r /usr/share/easy-rsa /etc/openvpn/
cp /etc/openvpn/easy-rsa/vars.example /etc/openvpn/easy-rsa/vars
cd /etc/openvpn/easy-rsa/
echo 'set_var KEY_COUNTRY "PORTUGAL"' >> vars
echo 'set_var KEY_CITY "Lisbon"' >> vars
echo 'set_var KEY_ORG "sirssec"' >> vars
echo 'set_var KEY_EMAIL "admin@example.com"' >> vars
echo 'set_var KEY_OU "OpenVPN"' >> vars
./easyrsa init-pki
echo -en "\n" | ./easyrsa build-ca nopass
echo -en "\n" | ./easyrsa gen-req client nopass
cp pki/reqs/client.req /shared
cd 
cd ..
mv client.conf /root
chmod +x Sync.sh
./Sync.sh
mv /shared/ca.crt /root
mv /shared/client.crt /root
mv /shared/ta.key /root
mv /etc/openvpn/easy-rsa/pki/private/client.key /root
cd
mkdir -p /dev/net
mknod /dev/net/tun c 10 200
chmod 600 /dev/net/tun
iptables-legacy -A FORWARD -p icmp -j ACCEPT
iptables-legacy -A FORWARD -p tcp -s 5.4.3.0/24 -d 6.6.6.0/24 --dport 80 -j ACCEPT
iptables-legacy -A FORWARD -p tcp -s 5.4.3.0/24 -d 6.6.6.0/24 --dport 22 -j ACCEPT
iptables-legacy -A FORWARD -p tcp -s 5.4.3.0/24 -d 1.2.3.2 --dport 22 -j ACCEPT
iptables-legacy -A FORWARD -p tcp -s 5.4.3.0/24 -d 1.2.3.1 --dport 80 -j ACCEPT
iptables-legacy -A FORWARD -p tcp -s 5.4.3.0/24 -d 1.2.3.1 --dport 22 -j ACCEPT
iptables-legacy -A FORWARD -p tcp -s 5.4.3.0/24 -d 1.2.3.2 --dport 80 -j ACCEPT
iptables-legacy -A FORWARD !-s 5.4.3.0/24 -j DROP 
iptables-legacy -A FORWARD -d 5.4.3.0/24 -s 5.4.3.0/24 -j DROP
iptables-legacy -A FORWARD -j DROP




